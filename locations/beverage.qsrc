# beverage

menu_off = 1

if $ARGS[0] = 'bev_kva':
	*clr & cla
	frost = 1
	minut += 10
	fat += 2
	money -= val($_drink['<<args[1]>>,price'])
	pcs_health += 5
	pcs_mood += 15
	pcs_energy += 8
	if pcs_hydra >= 100:
		pcs_hydra += 30
	else
		pcs_hydra += 60
	end
	cumspclnt = 2
	gs 'cum_cleanup'
	pcs_breath = 0
	gs 'beverage', 'afterdrink'
	'<center><img <<$set_imgh>> src="images/shared/drinks/kvass.jpg"></center>'
	'You enjoy a drink of kvass, and<<$mtxt>>'
	gs 'stat'
	killvar '$_drink'

	if food_loc = 1:
		act 'Finish': gt 'food_menu'
	else
		act 'Finish':gt $loc, $metka
	end
end

