# bedPar
gs 'stat'

if $clothingworntype = 'nude':
	'<center><img src="images/pics/bed.jpg"></center>'
else
	'<center><img src="images/pics/son.jpg"></center>'
end

'You lie on the bed. Alarm set for <<timer>> hours <<timerM>> minutes.'

act 'Set Alarm Clock':gt 'budilnik', 'start'

!!if son < 10:
act 'Undress and go to bed':
	if disable_autosave = 0:
		if StoryLine = 0:
			savegame 'autosave.sav'
		else
			savegame 'autosave_alt.sav'
		end
	end

	cls
	health += 5
	hapri = 0
	InSleep = 1
	:loopson
	minut += 1
	stime += 1

	if stime = 60:stime = 0 & son += 3

	clr
	cls
	gs 'stat'
	'<center><img src="images/pics/son.jpg"></center>'

	if analplugIN = 1:analplugIN = 0 & 'Before going to bed you remove your butt plug.'
	if vibratorIN = 1:vibratorIN = 0 & 'Before going to bed you remove your vibrator'
	if mop > 1:mop = 0 & vidageday = vidageday - 1 & 'Makeup smears your face, you think that it looks bad sleeping in makeup, and your skin will age faster from this.'

	'You sleep and you dream about nothing.'

	if hour = timer and minut = timerM:
		manna -= 10
		'Alarm goes off.'
		
		if kanikuli = 0 and SchoolAtestat = 0 and week < 6 and hour >= 4 and hour < 9:
			act 'Get up out of bed and get dressed for school (0:15)':
				cla
				gs 'clothing', 'wear', 'sforma'
				InSleep = 0
				minut += 15
				tanga = 1
				gt $locM, $metkaM
			end
		end
		
		act 'Get out of bed and get dressed (0:15)':
			cla
			gs 'clothing', 'wear_last_worn'
			InSleep = 0
			minut += 15
			tanga = 1
			gt $locM, $metkaM
		end

		exit
	end

	if son > 23 and dosip = 0:
		'You wake up, no longer tired.'
		
		if kanikuli = 0 and SchoolAtestat = 0 and week < 6 and hour >= 4 and hour < 9:
				cla
				gs 'clothing', 'wear', 'sforma'
				InSleep = 0
				minut += 15
				tanga = 1
				gt $locM, $metkaM
			end
		end

		act 'Get out of bed and get dressed (0:15)':
			cla
			gs 'clothing', 'wear_last_worn'
			InSleep = 0
			minut += 15
			tanga = 1
			gt $locM, $metkaM
		end

		exit
	end

	jump 'loopson'
end
!!end

act 'Get out of bed':
	cla
	gt $locM, $metkaM
end

