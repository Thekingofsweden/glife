# shop
!! This is the supermarket, located in several places

!! Main entrance
if $ARGS[0] = 'start':
	CLOSE ALL
	if sound = 0:PLAY 'sound/shop.mp3',30
	$shoplocation = 'main'
end

if $ARGS[0] = 'start' or $ARGS[0] = 'move':
	minut += 1
end

!! Main area
