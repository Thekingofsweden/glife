	if $cycreport_txt ! 'In labour':
		'<center><b>Change Status because:</b></center>'
		if thinkpreg = 0:
			if knowpreg = 1:
				'<a href="exec: dynamic $d_cycreport_actor, 2 & gs ''stat''">I''m pregnant.</a>'
