# MBathrooms

if $ARGS[0] = 'bath':
	$metkaM = $ARGS[0]
	$locM = $CURLOC
	'A luxrious bathroom, designed to indulge and relax.'
	dynamic $shower
	dynamic $bath
	dynamic $tampon
	dynamic $basin
	dynamic $pirManage
	act 'Return to east wing landing':gt'MLanding', 'east'
end

if $ARGS[0] = 'ensuite':
	'An ensuite bathroom'
end

if $ARGS[0] = 'restroom':
	$metkaM = $ARGS[0]
	$locM = $CURLOC
	'A beautiful little room for taking care of the essentials and making yourself look good.'
	dynamic $tampon
	dynamic $quickwash
	dynamic $basin
	dynamic $pirManage
	act 'Return to foyer':gt'MHall', 'foyer'
end

