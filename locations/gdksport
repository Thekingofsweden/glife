if $ARGS[0] = 'dance2':
	cla
	*clr
	gsAboDance -= 1
	minut += 120
	fat -= 5

	if agil< 50:agil += rand(1, 3)
	if agil >= 50 and agil < 80:agil += rand(0, 2)
	if agil >= 80:agil += rand(0, 1)

	manna -= 5
	sweat += 3

	if dance < agil and dance < 75:dance += rand(0,2)

	gs 'stat'
	'<center><img src="images/etogame/fit1.jpg"></center>'
	if dance < 75:
		'You take a lesson in modern dance, which is very popular in discos.'

		if dance < agil:
			'Your skills still have a ways to go, but your agility helps you pull off some of the dance moves.'
		else
			'Your body lacks the agility to perform the dance moves you are being taught.'
		end

		!place for use in events
		if rand(0, 1) = 0:'You see something <a href="exec:gt ''danceGev''">interesting</a>.'
	elseif dance >= 75:
		'You have gone as far as you can with this dance class, you need to find a new teacher.'

		if albinaQWdance > 0:
			!place for use in events
			if rand(0, 1) = 0:'You see something <a href="exec:gt ''danceGev''">interesting</a>.'
		elseif albinaQWdance = 0 and StoryLine ! 0 and grupNPC[23] <= 20: gt 'gdksport', 'albina1'
		elseif albinaQWdance = 0 and StoryLine ! 0 and grupNPC[23] > 20 and grupNPC <= 60: gt 'gdksport', 'albina2'
		elseif albinaQWdance = 0 and StoryLine ! 0 and grupNPC[23] >= 60: gt 'gdksport', 'albina3'
		end
	end
end
			
