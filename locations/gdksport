if $ARGS[0] = 'start':
	CLOSE ALL
	$metkaM = $ARGS[0]
	$locM = $CURLOC
	$metka = $ARGS[0]
	$loc = $CURLOC
	gs 'stat'
	fcolor = rgb(0, 0, 0)
	bcolor = rgb(255, 255, 255)
	lcolor = rgb(106, 90, 205)
	'<center><b><font color="maroon">community center</font></b></center>'
	'<center><img src="images/qwest/alter/gdksport.jpg"></center>'
	'The community center gym offers lessons for <a href="exec: gt ''gdksport'',''racing1''">Racing</a>, <a href="exec:gt ''gdksport'',''dance1''">Dance</a> and <a href="exec:gt ''gdksport'',''vball1''">Volleyball</a>.'
	
	if kotovLoveQW > 0 and hour = 16:
		'You see <a href="exec:minut += 3 & gt ''kotovEv''">Vitek Kotov</a> with a large sports bag enter the gym.'
	elseif grupNPC[3] >= 80 and hour = 17 and ivansportday ! daystart:
		'You see <a href="exec:minut += 3 & gt ''IvanEv''">Ivan Prokhorov</a> with a large sports bag enter the gym.'
	end
	
	! WD: Uninitialised ~ 'UNSTARTER' allways false
!	if grupNPC[5] >= 80 and fedorKozlovQW = 0 and GorSlut = 0 and UNSTARTER = 1: gt 'gdksport', 'fedor_date'
	!!event does not start as it is incomplete, needs home location and cinema location!!
	
	act 'Go outside': 
		if $clothingworntype ! 'nude':
			gt 'gdk'
		else
			msg'<b><font color = red>You need to get dressed before leaving.</font></b>'
			gt 'gdksport', 'start'
		end
	end
	if albinaQWdance > 0 or gsAboDance > 0 or gsAboBeg > 0 or gsAboVolley > 0:
		act 'Change clothes in the locker room':gt 'clothing', 'view_clothing_list', 'wardrobe'
	end	
	if  sport = 0 and (albinaQWdance > 0 or gsAboDance > 0 or gsAboBeg > 0 or gsAboVolley > 0):'You are not dressed in sports clothes.'
	if sweat >= 0:
		act 'Wash in the shower':gt 'gdksport', 'shower'
	end
	if hour < 16 or hour > 20: exit
	if gsAboDance > 0 and sport = 1: 
		act 'Go to dance lesson, you have <<gsAboDance>> lessons remaining':gt 'gdksport', 'dance2'
	end
	if albinaQWdance > 0 and AlbinaBlokDance = 0 and ZvezdEnd = 0 and sport = 1:
		act 'Train with Starlets':gt 'gdksport', 'starlets'
	end
	if gsAboBeg > 0 and sport = 1:
		act 'Go to track lesson, you have <<gsAboBeg>> lessons remaining':gt 'gdksport', 'racing2'
	end
	if gsAboVolley > 0 and volleysostav = 0 and sport = 1:
		if week ! 5:
			act 'Go to volleyball lesson, you have <<gsAboVolley>> lessons remaining':gt 'gdksport', 'vball2'
		else
			act 'Go to volleyball lesson, you have <<gsAboVolley>> lessons remaining':gt 'gdksport', 'vball3'
		end
	end
	if volleysostav > 0 and sport = 1:
		if week ! 6 and volkomday ! daystart:
			act 'To engage with the team':gt 'gdksport', 'vball4'
		elseif week = 6 and sorevday ! daystart:
			act 'Play in Tournament': gt 'gdksport', 'vball5'
		end
	end
end
			
if $ARGS[0] = 'racing1':
	cls
	gs 'stat'
	'Race training cost 300 rubles for 30 lessons.'

	if money >= 300 and gsAboBeg = 0:
		act 'Buy 30 racing lessons (300 RUB)':
			cls
			money -= 300
			gsAboBeg += 30
			gs 'stat'
			'You paid for 30 racing lessons.'
		end
		act 'Leave':gt 'gdksport', 'start'
	end

	act 'Leave':gt 'gdksport', 'start'
end

